@model IEnumerable<Note>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<br /> 
<div class="container">
    <div class="row mt-4 pb-3 p-2">
        <div class="col-6">
            <h1 style="font-weight: bold">All Notes</h1>
        </div>

        <div class="col-6 text-end">
            <a class="custom-btn btn" asp-action="Add" asp-controller="Notes">Add New Note</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                
                <th width="30%">Note Title</th>
                <th width="10%" class="text-center">Total Words</th>
                <th class="text-end" width="40%">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var note in Model)
            {
                <tr>
                    
                    <td>@note.Title</td>
                    <td class="text-center">
                        @note.CalcLength().ToString()
                    </td>
                    <td class="text-end">
                        <a asp-action="View" asp-controller="Notes" class="btn btn-light"><i class="bi bi-folder2-open"></i>&nbsp;View Note</a>
                        <a asp-action="Edit" asp-controller="Notes" class="btn btn-light"><i class="bi bi-pen"></i>&nbsp;Edit Note</a>
                    </td>
                </tr>
             }
        </tbody>
    </table>

</div>