@{
}

<div class="container p-2 pb-3">
    <div class="row">
        <div class="col-12">
            <h3>Add Your New Note</h3>
            <hr /> <hr />
            <br />
        </div>
    </div>
</div>

<form method="post" asp-action="Add" asp-controller="Notes" class="mt-3 container">
    <div>
        <label asp-for="Title">Note's Title</label>
        <input class="normal-input" asp-for="Title" type="text" />
        <span asp-validation-for="Title" class="text-warning"></span>
        <br />
    </div>

    <div>
        <label asp-for="Content">Note's Content</label>
        <textarea asp-for="Content" class="content-input"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
        <br />

    </div>

    <div class="mt-3">
        <label asp-for="TitleColor">Pick A Color For The Title</label>
        <select asp-for="TitleColor" class="form-select custom-select" >
            <option value="black">Black</option>
            <option value="rgb(255, 183, 0)">Gold</option>
            <option value="crimson">Crimson</option>
            <option value="white">White</option>
            <option value="red">Red</option>
            <option value="gray">Gray</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn custom-btn">Add Note</button>
    </div>
</form>