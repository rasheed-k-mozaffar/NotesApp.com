@{
}

<div class="container p-2">
    <div class="row">
        <div class="col-12">
            <h3>Edit Your Note</h3>    
        </div>
    </div>
</div>

<form method="post" asp-action="Edit" asp-controller="Notes" class="mt-3 container">
    <div hidden>
        <label asp-for="Id">Note Id</label>
        <input asp-for="Id" readonly class="form-control"/>
        <br />
    </div>

    <div>
        <label asp-for="Title">Note's Title</label>
        <input class="normal-input" asp-for="Title" type="text" />
        <span asp-validation-for="Title" class="text-danger" style="font-weight: 200"></span>
        <br />
    </div>

    <div>
        <label asp-for="Content">Note's Content</label>
        <textarea asp-for="Content" class="content-input"></textarea>
        <span asp-validation-for="Content" class="text-danger" style="font-weight: 200"></span>
        <br />

    </div>

    <div class="mt-3">
        <label asp-for="TitleColor">Pick A Color For The Title</label>
        <select asp-for="TitleColor" class="form-select custom-select">
            <option value="black">Black</option>
            <option value="rgb(255, 183, 0)">Gold</option>
            <option value="crimson">Crimson</option>
            <option value="white">White</option>
            <option value="red">Red</option>
            <option value="gray">Gray</option>
            <option value="navy">Navy</option>
            <option value="yellow">Yellow</option>
            <option value="orange">Orange</option>
            <option value="lime">Lime</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-warning">Update Note</button>
        
        <button type="submit" class="btn btn-danger" asp-action="Delete">Delete Note</button>
        
    </div>
</form>