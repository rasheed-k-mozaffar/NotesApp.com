@{
}

<div class="container p-2 pb-3">
    <div class="row">
        <div class="col-12">
            <h1>Add Your New Note</h1>
            <hr />
        </div>
    </div>

    <div>
        <label asp-for="Title">Note's Title</label>
        <input class="normal-input" type="text" />
        <span asp-validation-for="Title" class="text-warning"></span>
    </div>

    <div>
        <label asp-for="Content">Note's Context</label>
        <input class="content-input" type="text" />
        
    </div>

    <div>
        <select asp-for="TitleColor">
            <option value="black">Black</option>
            <option value="rgb(255, 183, 0)">Gold</option>
            <option value="crimson">Crimson</option>
            <option value="white">White</option>
            <option value="red">Red</option>
            <option value="gray">Gray</option>
        </select>
    </div>
</div>
